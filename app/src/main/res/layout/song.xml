<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:android="http://schemas.android.com/apk/res/android">
    <android.support.v7.widget.CardView
            android:layout_height="match_parent"
            android:layout_width="match_parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="2dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="1dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="1dp" android:layout_marginEnd="2dp">

        <android.support.constraint.ConstraintLayout
                style="@style/SelectableItemBackground"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:foregroundTint="@color/darkThemeColorPrimary"
                android:padding="5dp">

            <TextView
                    android:id="@+id/song_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="68dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="4dp"
                    android:tag="title"
                    android:textColor="@color/materialDarkGray"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent" />

            <TextView
                    android:id="@+id/song_artist"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="68dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="8dp"
                    android:tag="artist"
                    android:textColor="@color/materialLightGray"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            <TextView
                    android:tag="time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2:12"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />
            <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_marginTop="4dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginBottom="4dp"
                    card_view:cardCornerRadius="8dp"
                    card_view:cardElevation="2dp"
                    android:layout_height="wrap_content">
                <ImageView
                        android:id="@+id/song_cover"
                        android:layout_width="54dp"
                        android:layout_height="54dp"
                        android:src="@mipmap/ic_corgi_icon_final"
                        android:tag="cover"
                        android:visibility="visible"
                        app:srcCompat="@mipmap/ic_corgi_icon_final" />
            </android.support.v7.widget.CardView>
        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>
