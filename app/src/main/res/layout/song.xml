<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:padding="5dp"
                                             android:background="?android:attr/selectableItemBackground"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content">
    <TextView
            android:id="@+id/song_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/materialDarkGray"
            android:textSize="18sp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/song_artist" app:layout_constraintVertical_bias="1.0"
            android:layout_marginStart="68dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="4dp"
            app:layout_constraintHorizontal_bias="0.0"/>

    <TextView
            android:id="@+id/song_artist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/materialLightGray"
            android:textSize="16sp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="68dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="4dp"/>
    <ImageView
            android:layout_width="60dp" android:src="@mipmap/ic_corgi_icon_final"
            android:layout_height="60dp" app:srcCompat="@mipmap/ic_corgi_icon_final"
            android:id="@+id/song_cover" android:layout_marginTop="4dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="4dp" app:layout_constraintVertical_bias="1.0"/>
</android.support.constraint.ConstraintLayout>