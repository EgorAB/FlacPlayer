<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent" android:textAlignment="center">

    <ImageView
            android:layout_width="match_parent"
            android:scaleType="fitCenter"
            android:layout_height="200dp"
            app:srcCompat="@mipmap/ic_corgi_icon_final"
            android:src="@mipmap/ic_corgi_icon_final"
            android:id="@+id/imageView" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="Добро пожаловать в Intelligent Media Player — умный медиаплеер, интегрированный с Telegram.\nДля того чтобы продолжить войдите в аккаунт."
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView9" android:textColor="@color/materialBlack"
            android:textSize="18sp" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView" android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:textAlignment="center"/>
    <org.telegram.passport.TelegramLoginButton
            android:id="@+id/telegramButton"
            android:layout_width="match_parent" android:layout_height="40dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="16sp"
            android:layout_marginStart="16dp" android:layout_marginEnd="16dp"
            android:layout_marginTop="32dp"
            app:cornerRoundness="0.5"
            app:layout_constraintTop_toBottomOf="@+id/textView9"
            app:layout_constraintHorizontal_bias="0.0"/>
    <Button
            android:text="Продолжить без авторизации"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:textColor="@color/colorPrimaryDark"
            android:id="@+id/startButton"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.0"/>
</android.support.constraint.ConstraintLayout>