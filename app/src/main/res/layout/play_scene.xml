<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/play_scene"
        android:background="@color/white"
        android:layout_height="match_parent"
        android:layout_width="match_parent">
    <Button android:layout_width="100dp" android:layout_height="100dp"
            android:background="@drawable/ic_pause_black_24dp"
            android:focusable="true"
            android:clickable="true"
            android:id="@+id/playButton"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintVertical_bias="0.793"/>

    <Button android:layout_width="100dp" android:layout_height="100dp"
            android:background="@drawable/ic_fast_rewind_black_24dp"
            android:focusable="true"
            android:clickable="true"
            android:id="@+id/previousButton"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/playButton"
            app:layout_constraintVertical_bias="0.793"/>

    <Button android:layout_width="100dp" android:layout_height="100dp"
            android:background="@drawable/ic_fast_forward_black_24dp"
            android:focusable="true"
            android:clickable="true"
            android:id="@+id/nextButton"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.793" app:layout_constraintStart_toEndOf="@+id/playButton"
            android:layout_marginStart="8dp"/>
    <TextView
            android:text="Имя автора"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView" android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/textView2"
            android:textColor="#B2030303" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:text="Название трека"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2" android:textSize="36sp"
            app:layout_constraintBottom_toTopOf="@+id/playButton"
            android:textColor="#F0000000" android:layout_marginBottom="8dp" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <SeekBar
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:id="@+id/seekBar"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintTop_toBottomOf="@+id/playButton"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="24dp" app:layout_constraintHorizontal_bias="0.0"/>
    <Button
            android:text="Button"
            android:layout_width="185dp"
            android:layout_height="164dp"
            android:id="@+id/button" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="124dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.498"/>

</android.support.constraint.ConstraintLayout>